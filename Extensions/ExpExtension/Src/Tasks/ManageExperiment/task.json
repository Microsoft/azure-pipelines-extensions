{
    "id": "58b25f39-9b53-44ce-b6d1-08ef854e905b",
    "name": "ManageExperiment",
    "friendlyName": "Manage Experiment",
    "description": "Manage Experiments in Control Tower",
    "author": "Microsoft Corporation",
    "helpMarkDown": "[More Information](Get Link here)",
    "category": "Utility",
    "visibility": [
        "Build",
        "Release"
    ],
    "version": {
        "Major": 0,
        "Minor": 0,
        "Patch": 1
    },
    "minimumAgentVersion": "1.95.0",
    "instanceNameFormat": "Manage Experiment",
    "inputs": [
        {
            "name": "ServiceConnectionId",
            "aliases": ["azureSubscription"],
            "type": "connectedService:AzureRM",
            "label": "Azure Subscription",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Select the Azure Resource Manager subscription for the deployment."
        },
        {
            "name": "ExperimentId",
            "type": "string",
            "label": "Experiment Id",
            "required": true,
            "defaultValue": "",
            "helpMarkDown": "Select the experiment you want to edit."
        },
        {
            "name": "Action",
            "type": "pickList",
            "label": "Action",
            "defaultValue": "",
            "required": true,
            "options": {
                "Start": "Start the experiment",
				"Advance": "Advance the experiment",
                "Stop": "Stop the experiment"
            },
            "helpMarkDown": "Select the action you want to perform"
        },
        {
            "name": "FlightsTraffic",
            "type": "string",
            "label": "Flights traffic exposures",
            "defaultValue": "",
            "required": true,
            "visibleRule": "Action = ChangeTraffic",
            "helpMarkDown": "Semicolon separated flight exposure. Example: 'flight1':10';'flight2':20"
        }
    ],
    "dataSourceBindings": [
        {
            "target": "ExperimentId",
            "endpointId": "$(ConnectedServiceName)",
            "dataSourceName": "ControlTowerExperiments",
            "resultTemplate": "{ \"Value\" : \"{{{Id}}}\", \"DisplayValue\" : \"{{{Name}}}\" }"
        }
    ],
    "execution": {
        "Node": {
            "target": "main.js"
        }
    }
}